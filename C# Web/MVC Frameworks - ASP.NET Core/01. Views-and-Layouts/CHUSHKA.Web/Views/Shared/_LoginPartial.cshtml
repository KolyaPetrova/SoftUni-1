@using Microsoft.AspNetCore.Identity
@using CHUSHKA.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link nav-link-white" asp-controller="Home" asp-action="Index">Home</a>
        </li>
        @if (this.User.IsInRole("Admin"))
        {
            <li class="nav-item">
                <a class="nav-link nav-link-white" asp-controller="Products" asp-action="Create">Create Product</a>
            </li>
            <li class="nav-item">
                <a class="nav-link nav-link-white" asp-controller="Orders" asp-action="All">All Orders</a>
            </li>
        }
    </ul>

    <ul class="nav navbar-nav navbar-right">
        <li>
            <a class="nav-link nav-link-white" asp-controller="Account" asp-action="Logout">Logout</a>
        </li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right row">
        <li class="nav-item col-md-3"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="nav-item col-md-4"><a asp-controller="Account" asp-action="Register">Register</a></li>
        <li class="nav-item col-md-4"><a asp-controller="Account" asp-action="Login">Login</a></li>
    </ul>
}
